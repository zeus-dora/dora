# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 4

[**.{md,xml,yml.dist,init,conf,yaml,neon,neon.dist,json,docker-compose.yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
